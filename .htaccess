<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Redirect /api requests to Laravel public_SS (keep /api prefix)
    RewriteCond %{REQUEST_URI} ^/api
    RewriteRule ^(.*)$ /public_SS/$1 [L]

    # Redirect /storage requests to Laravel public_SS/storage (for uploaded files)
    RewriteCond %{REQUEST_URI} ^/storage
    RewriteRule ^storage/(.*)$ /public_SS/storage/$1 [L]

    # Serve actual files (JS, CSS, images) from /public/react if they exist
    RewriteCond %{REQUEST_URI} ^/public/react/
    RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI} -f
    RewriteRule ^ - [L]

    # Serve actual files from root if they exist
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # For all other requests, serve the React SPA
    RewriteCond %{REQUEST_URI} !^/api
    RewriteCond %{REQUEST_URI} !^/storage
    RewriteCond %{REQUEST_URI} !^/public_SS
    RewriteRule ^ /public/react/index.html [L]
</IfModule>

# Fallback DirectoryIndex
DirectoryIndex /public/react/index.html
